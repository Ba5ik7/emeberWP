<div class="modal signup" >

    <h1>Sign Up</h1>
    <h6>Something to say about signing up!</h6>



    <form>
        {{input 
                type="text"
                placeholder="Username"
                valueBinding="userNameTxt"
                id="username" 
                focus-in="usernameTip"
                focus-out="checkUsernameTip"
        }}
        {{input 
                type="text"
                placeholder="Email"
                valueBinding="emailTxt"
                id="userEmail"
                focus-in="emailTip"
                focus-out="checkEmailTip"
        }}
        {{input 
                type="password"
                placeholder="Password"
                valueBinding="passwordTxt"
                id="password"
                focus-in="passwordTip"
                focus-out="checkPasswordTip"
        }}
        {{input 
                type="password"
                placeholder="Confirm Password"
                valueBinding="confirmPasswordTxt"
                id="confirmPassword"
                focus-out="checkConfirmPasswordTip"
        }}

        <span {{action 'submit'}} >Sign Up</span>
        <span {{action 'closeModal'}} >Cancel</span>

    </form>
    <a {{action 'signIn'}} >Sign in here.</a>
    <a {{action 'forgotPassword'}} >Did you forget your password?</a>

    

</div>

<div class="modal-overlay" {{action 'closeModal'}} title="Close"></div>