{{#each}}

    <article>

        {{#if featured_image}}
                <img class="featured-image" {{bind-attr src=featured_image.source }}>
        {{/if}}

        <div>

            <h1>{{title}}</h1>

            <div>
                {{{content}}}
            </div>

            <img {{bind-attr src=author.avatar }}>

            {{author.name}}
            <time>{{date}}</time>

        </div>
        
    </article>
    
{{/each}}

{{#if loadingMore}}
    {{ajax-loader}}
{{/if}}

{{#each row in comments}}
    <div class="comment-list-item">
        <time>{{row.date}}</time>
        {{{row.content}}}
        <img {{bind-attr src=row.author.avatar }}>
        {{row.author.name}}
    </div>
{{/each}}